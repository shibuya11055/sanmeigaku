<style>
  .terms-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background: #fff;
    min-height: 100vh;
  }

  .terms-header {
    text-align: center;
    margin-bottom: 40px;
    padding-bottom: 30px;
    border-bottom: 2px solid #f0f0f0;
  }

  .app-branding {
    margin-bottom: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  .app-icon {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.25);
