    background: #f8f9fa;
    padding: 25px;
    border-radius: 12px;
    margin-top: 30px;
    border: 1px solid #e9ecef;
  }

  .contact-section h3 {
    font-size: 18px;
    font-weight: 600;
    color: #333;
    margin-bottom: 15px;
    border-left: 4px solid #28a745;
    padding-left: 15px;
  }

  .link {
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
  }

  .link:hover {
    color: #764ba2;
    text-decoration: underline;
  }

