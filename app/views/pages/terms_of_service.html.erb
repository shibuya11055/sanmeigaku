  }

  .app-title {
    font-size: 24px;
    font-weight: 700;
    color: #333;
    margin: 0;
  }

  .page-title {
    font-size: 28px;
    font-weight: 700;
    color: #333;
    margin: 20px 0 10px 0;
  }

  .last-updated {
    color: #666;
    font-size: 14px;
    margin: 0;
  }

  .terms-content {
    line-height: 1.7;
    color: #333;
  }

  .terms-section {
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid #f0f0f0;
  }

  .terms-section:last-child {
    border-bottom: none;
  }

  .terms-section h3 {
    font-size: 18px;
    font-weight: 600;
    color: #333;
    margin-bottom: 15px;
    padding-left: 10px;
    position: relative;
  }

  .terms-section h3:before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 20px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 2px;
  }

  .terms-section p {
    margin-bottom: 15px;
    text-align: justify;
  }

