    background-color: #218838;
  }

  .btn-cancel {
    background-color: #f8f9fa;
    color: #212529;
    border: 1px solid #ccc;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 500;
    border-radius: 4px;
    text-decoration: none;
  }

  .btn-cancel:hover {
    background-color: #e2e6ea;
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .form-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }

    .form-group-half {
      width: 100%;
    }

    .form-actions {
      flex-direction: column;
    }

    .btn-register, .btn-cancel {
      width: 100%;
      text-align: center;
    }
  }
</style>
